<h1>User info</h1>
<div>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
</div>
<p>name <%= @user.name %></p>
<p>introduction <%= @user.introduction %></p>
<% if @user.id == current_user.id  %>
 <p><%= link_to"プロフィール編集",edit_user_path(@user.id) %></p>
 <% else %>
 <p><%= link_to"プロフィール編集",edit_user_path(current_user.id) %></p>
<% end %>

<h1>New Book</h1>
<%= form_with model: @book,local:true do |f| %>
 <h4>Title</h4>
  <%= f.text_field :title %>
 <h4>Opinion</h4>
  <%= f.text_area :opinion %>
  <%= f.submit "Create Book" %>
 <% end %>
<!----------------------部分テンプレート------------------------------>

<h1>Books</h1>
<p>
<% @books.each do |book| %>
<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
<%= link_to book.title,book_path(book.id) %>
<%= book.opinion %>
</p>
<% end %>

