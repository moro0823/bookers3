<% if @user.errors.any? %>
  error <%= @user.errors.count %>件のエラーが発生しました
 <%= @user.errors.full_messages.each do |message| %>
    <% end %>
   <% end %>

<h1>User info</h1>
<%= form_with model:@user, local:true do |f| %>
<div class="name">
<label for="inputName">Name</label><br>
 <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
</div>

<div class="image">
<label for="inputImage">Image</label><br>
  <%= f.attachment_field :profile_image, autofocus: true, placeholder:"プロフィール画像" %>
</div>

<div class="introduction">
<label for="inputIntroduction">introduction</label><br>
   <%= f.text_area :introduction, autofocus: true, placeholder:"自己紹介文" %>
</div>
<div><%= f.submit"Update User",class: "btn btn-secondary"  %></div>
<% end %>
