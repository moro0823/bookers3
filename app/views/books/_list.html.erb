<% if flash[:notice] %>
 <p id="notice">
  <%= flash[:notice] %>
</p>
<% end %>

<h1>User info</h1>
<div>
  <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
</div>
<p>name <%= user.name %></p>
<p>introduction <%= user.introduction %></p>
<% if user.id == current_user.id  %>
 <p><%= link_to"プロフィール編集",edit_user_path(user.id) %></p>
 <% else %>
 <p><%= link_to"プロフィール編集",edit_user_path(user.id) %></p>
<% end %>

<!--@userをuserに変更-->

<h1>New Book</h1>
<% if book.errors.any? %>
 <%= book.errors.count %>件のerrorが発生しました
 <% book.errors.full_messages.each do |message| %>
  <%= message %>
 <% end %>
 <% end %>
 
<%= form_with model: book,local:true do |f| %>
 <h4>Title</h4>
  <%= f.text_field :title %>
 <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
 <% end %>
 
